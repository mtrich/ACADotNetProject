@model SignInViewModel


<div class="text-center">
    <h2 class="h3 mb-3 font-weight-normal">Sign In</h2>
    <form asp-action="SignIn" method="post" class="form-signin">
        <div asp-validation-summary="All"></div>
        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email" class="form-control" placeholder="Email Address"/>

        <label asp-for="Password"class="sr-only"></label>
        <input asp-for="Password" class="form-control" placeholder="Password"/>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" asp-for="RememberMe" />
                Remember Me
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
    </form>
</div>