        <li data-target="#slides" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="img/bgimg.jpg">
            <div class="carousel-caption">
                <h1 class="display-4" id="#my-text">Get started now</h1>
                <h3>Start helping those who need it.</h3>
                <a class="btn btn-outline-dark btn-lg" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="img/bgimg2.jpg">
            <div class="carousel-caption">
                <h1 class="display-4"></h1>
                <h1>Your new Network.</h1>
                <hr class="dark">
            </div>
        </div>
        <div class="carousel-item">
            <img src="img/bgimg3.jpg">
            <div class="carousel-caption">
                <h1 class="display-4"></h1>
                <h1>Join a team.</h1>
                <h2>do your part.</h2>
            </div>
        </div>
    </div>
</div>

